@{
  ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <div class="container">
    <h1 class="display-4" style="color:white;">Series Don Juan</h1>
    <p style="color:white;">Series para todo el dia</p>
    <img class="logo" src="/Logo.png">
  </div>
</div>
<div class="containerCard">
  @foreach (Serie item in @ViewBag.Series)
  {

    <div class="card" style="width: 14rem; height: 20rem;">
      <img class="card-img-top" style="height: 10rem;" src="@item.ImagenSerie">
      <div class="card-body">
        <h5 class="card-title">@item.Nombre</h5>
        <div class="containerBoton">
          <button class="btn btn-danger" onclick="mostrarTemporada(@item.IdSerie, '@item.Nombre')">Temporadas</button>
          <button class="btn btn-warning" onclick="mostrarActores(@item.IdSerie, '@item.Nombre')">Actores</button>
          <button class="btn btn-primary" onclick="mostrarMasInfo(@item.IdSerie, '@item.Nombre')">Mas Info</button>
        </div>
      </div>
    </div>

  }
</div>
<div class="modal fade" id="ModalSerie" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hideen="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="NombreSerie"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="Texto"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
